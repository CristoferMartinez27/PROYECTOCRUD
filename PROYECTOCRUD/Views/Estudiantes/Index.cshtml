<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CARNET)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.NOMBRE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FECHA_NACIMIENTO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FECHA_REGISTRO)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.CARNET }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.CARNET }, new { @class = "btn btn-warning" }) |
