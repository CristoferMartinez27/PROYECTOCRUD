@model IEnumerable<PROYECTOCRUD.Models.Estudiante>

@{
    ViewBag.Title = "Busqueda";
}

<h2>Busqueda de Estudiante</h2>

<form asp-controller="Usuarios" asp-action="Busqueda">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CARNET)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_NACIMIENTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_REGISTRO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CARNET)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.NOMBRE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FECHA_NACIMIENTO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FECHA_REGISTRO)
    </td>
    <td>
        @Html.ActionLink("Agregar a Cola", "AgregarCola", new { id = item.CARNET }) |
    </td>
</tr>
}

</table>
