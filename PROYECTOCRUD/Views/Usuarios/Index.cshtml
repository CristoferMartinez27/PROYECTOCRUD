@model IEnumerable<PROYECTOCRUD.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.USER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PASSWORD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.USER)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PASSWORD)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.USER }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.USER }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.USER }, new { @class = "btn btn-danger" })
    </td>

</tr>
}

</table>
