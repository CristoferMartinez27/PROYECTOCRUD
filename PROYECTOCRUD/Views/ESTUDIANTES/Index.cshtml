@model IEnumerable<PROYECTOCRUD.Models.ESTUDIANTES>

@{
    ViewBag.Title = "Index";
}

<h2>REGISTRO DE ESTUDIANTES</h2>

<p>
    @Html.ActionLink("CREAR NUEVO", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_NACIMIENTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_REGISTRO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_NACIMIENTO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_REGISTRO)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CARNET }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.CARNET }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.CARNET }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
